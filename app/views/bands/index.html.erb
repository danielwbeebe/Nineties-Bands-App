<%= render 'header' %>

<div class="good">

  <div class="good-bands">
    <h2>List of Good Bands Will Go Here</h2>

    <ul>
    <% @goodbands.each do |goodband| %>
      <li><%= link_to goodband.name, goodband_path(goodband) %></li>

    <% end %>

    </ul>
  </div>

  <div class="add-good-band">

    <h2>Add Good Band</h2>

  <%= form_for :goodband, method: 'post', url: {action: 'create'} do |f| %>
      <%= label(:goodband, :name) %>
      <%= f.text_field :name %>

      <%= label(:goodband, :song) %>
      <%= f.text_field :song %>

      <%= label(:goodband, :album) %>
      <%= f.text_field :album %>

      <%= f.submit %>
    <% end %>

  </div>

</div>

<div class="bad">

  <div class="bad-bands">
    <h2>List of Bad Bands Will Go Here</h2>

    <ul>
    <% @badbands.each do |badband| %>
      <li><%= link_to badband.name, badband_path(badband) %></li>
    <% end %>
    </ul>

  </div>

  <div class="add-bad-band">

    <h2>Add Bad Band</h2>

  <%= form_for :badband, method: 'post', url: {action: 'create'} do |f| %>
      <%= label(:badband, :name) %>
      <%= f.text_field :name %>

      <%= label(:badband, :song) %>
      <%= f.text_field :song %>

      <%= label(:badband, :album) %>
      <%= f.text_field :album %>

      <%= f.submit %>
    <% end %>

  </div>

</div>

<%= render 'footer' %>
