<%= render 'header' %>

<main>
<div class='band-details'>
  <h1>Good Band Details</h1>
  <h2><%= @goodbands.name %></h2>
  <h2><%= @goodbands.song %></h2>
  <h2><%= @goodbands.album %></h2>

</div>

<h2>Edit Info</h2>

  <%= form_for :goodband, method: 'patch', url: {action: 'update'} do |f| %>
      <%= label(:goodband, :song) %>
      <%= f.text_field :song %>

      <%= label(:goodband, :album) %>
      <%= f.text_field :album %>

      <%= f.submit "UPDATE" %>
  <% end %>


<h3><%= link_to "Back", root_path %></h3>

</main>
<%= render 'footer' %>
