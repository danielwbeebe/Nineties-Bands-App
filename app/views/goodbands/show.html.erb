<%= render 'header' %>

<main>

<div class='band-show'>

  <div class='band-details'>
    <h1>Details About <%= @goodbands.name %></h1>
    <h2>Best Song: <%= @goodbands.song %></h2>
    <h2>Best Album: <%= @goodbands.album %></h2>
  </div>

  <h2>Edit Info</h2>

  <%= form_for :goodband, method: 'patch', url: {action: 'update'} do |f| %>
      <%= label(:goodband, :song) %>
      <%= f.text_field :song %>

      <%= label(:goodband, :album) %>
      <%= f.text_field :album %>

      <%= f.submit "UPDATE" %>
  <% end %>

  <h3><%= link_to "Back", root_path %></h3>

</div>

</main>
<%= render 'footer' %>
